<%- include('layout', { title: 'Home', content: `
    <h1>Welcome to the Home Page</h1>
    <p>Select an option from the dropdown inside each card:</p>

    <!-- Card Section -->
    <div class="card-container">
<!-- Card 1: Send SMS -->
<div class="card">
    <img src="/images/smsms.jpg" class="card-img" alt="Card Image 1">
    <div class="card-body">
        <h5 class="card-title">Send SMS</h5>
        <p class="card-text">Generate SMS Notification.</p>
        
        <!-- Dropdown Menu -->
        <select id="smsOptions" class="dropdown">
            <option selected>Choose an option</option>
            <option value="/pickup">Pick-up Notification</option>
            <option value="/quotation">Quotation Reminder</option>
            <option value="/repairupdate">Repair Update</option>
            <option value="/forfeiture">Forfeiture Warning</option>
            <option disabled>──────────</option>
            <option value="/manualsms">Manually send SMS</option>
        </select>

        <!-- Go Button -->
        <button class="go-btn" onclick="navigateToPage()">GO</button>

    </div>
</div>

<script>
    function navigateToPage() {
        let selectedOption = document.getElementById("smsOptions").value;
        if (selectedOption !== "Choose an option") {
            window.location.href = selectedOption; // Redirect to selected page
        }
    }
</script>


        <!-- Card 2: Initiate Call (No Changes) -->
        <div class="card">
            <img src="/images/smcall.jpg" class="card-img" alt="Card Image 2">
            <div class="card-body">
                <h5 class="card-title">Initiate CALL</h5>
                <p class="card-text">Dial client's number.</p>
                
                <!-- Dropdown Menu -->
                <select class="dropdown">
                    <option selected>Choose an option</option>
                    <option value="1">Option A</option>
                    <option value="2">Option B</option>
                    <option value="3">Option C</option>
                </select>
            </div>
        </div>

        <!-- Card 3: Show JO History (No Changes) -->
        <div class="card">
            <img src="/images/smhistory.jpg" class="card-img" alt="Card Image 3">
            <div class="card-body">
                <h5 class="card-title">Show JO History</h5>
                <p class="card-text">Open JO History TAB.</p>
                
                <!-- Dropdown Menu -->
                <select class="dropdown">
                    <option selected>Choose an option</option>
                    <option value="1">Choice X</option>
                    <option value="2">Choice Y</option>
                    <option value="3">Choice Z</option>
                </select>
            </div>
        </div>
    </div>
` }) %>
