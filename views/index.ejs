<%- include('layout', { title: 'Home', content: `
    <h1>Welcome to the Home Page</h1>
    <p>Select an option from the dropdown inside each card:</p>

    <!-- Card Section -->
    <div class="card-container">
        <!-- Card 1 -->
        <div class="card">
            <img src="/images/smsms.jpg" class="card-img" alt="Card Image 1">
            <div class="card-body">
                <h5 class="card-title">Send SMS</h5>
                <p class="card-text">Generate SMS Notification.</p>
                
                <!-- Dropdown Menu -->
                <select class="dropdown">
                    <option selected>Choose an option</option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                </select>

                <!-- Go Button -->
                <button class="go-btn">GO</button>

            </div>
        </div>

        <!-- Card 2 -->
        <div class="card">
            <img src="/images/smcall.jpg" class="card-img" alt="Card Image 2">
            <div class="card-body">
                <h5 class="card-title">Initiate CALL</h5>
                <p class="card-text">Dial client's number.</p>
                
                <!-- Dropdown Menu -->
                <select class="dropdown">
                    <option selected>Choose an option</option>
                    <option value="1">Option A</option>
                    <option value="2">Option B</option>
                    <option value="3">Option C</option>
                </select>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="card">
            <img src="/images/smhistory.jpg" class="card-img" alt="Card Image 3">
            <div class="card-body">
                <h5 class="card-title">Show JO History</h5>
                <p class="card-text">Open JO History TAB.</p>
                
                <!-- Dropdown Menu -->
                <select class="dropdown">
                    <option selected>Choose an option</option>
                    <option value="1">Choice X</option>
                    <option value="2">Choice Y</option>
                    <option value="3">Choice Z</option>
                </select>
            </div>
        </div>
    </div>
` }) %>
